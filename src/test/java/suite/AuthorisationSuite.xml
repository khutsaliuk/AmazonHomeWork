<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="AuthorisationSuite">


    <test name="Login with empty email field">
        <classes>
            <class name="TestEmptyEmail"/>
        </classes>
    </test>

    <test name="Login with incorrect email">
        <classes>
            <class name="TestIncorrectEmail"/>
        </classes>
    </test>

    <test name="Login with incorrect password">
        <classes>
            <class name="TestIncorrectPassword"/>
        </classes>
    </test>
    <test name="Success login on the site">
        <classes>
            <class name="TestSuccessLogin"/>
        </classes>
    </test>

</suite>